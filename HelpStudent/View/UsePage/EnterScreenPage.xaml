<Page x:Class="HelpStudent.View.UsePage.EnterScreenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HelpStudent.View.UsePage"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      Title="RegistrationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="ФИО"
                   Margin="10 0 10 0"/>
            <TextBox Width="400" 
                     Height="65" 
                     Margin="0 0 0 20" 
                     Text="Иванов Иван Иванович"
                     Name="FIOTbl"
                     GotFocus="FIOTbl_GotFocus"
                     LostFocus="FIOTbl_LostFocus"
                     VerticalContentAlignment="Center"/>
            
            <Grid Height="143">
                <Label Content="Пароль"
                   Margin="10,0,10,99"/>
                <PasswordBox x:Name="PassworPb" 
                             Width="400" 
                             Height="65" 
                             Margin="10 20"
                             LostFocus="passwordBox_LostFocus"
                             GotFocus="passwordBox_GotFocus"
                             VerticalContentAlignment="Center"/>
                <Label x:Name="textBox" Content="*****" Margin="10,49,309,53"/>
            </Grid>

            <Button Width="300" 
                    Height="65" 
                    Margin="10 20" 
                    Content="Войти"
                    Name="EnterBtn" Click="EnterBtn_Click"/>
            <Button Width="400" 
                    Height="65" Margin="10 20" 
                    Content="Зарегестрироваться" 
                    Background="{x:Null}" 
                    BorderBrush="Black" 
                    Name="RegistrationBtn"
                    Click="RegistrationBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
